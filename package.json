{
  "name": "sheetleeten",
  "version": "1.0.0",
  "description": "Tiny Markdown-driven themed static site generator",
  "keywords": [
    "tiny",
    "markdown",
    "static",
    "site",
    "generator",
    "themed",
    "skitliten"
  ],
  "browser": "src/index.html",
  "bin": {
    "@erkkah/sheetleeten": "bin/sheetleeten",
    "sheetleeten": "bin/sheetleeten"
  },
  "scripts": {
    "serve": "rimraf dev && parcel serve -d dev --no-cache src/index.html",
    "build": "rimraf prod && parcel build -d prod --no-cache --no-source-maps src/index.html"
  },
  "author": "Erik Agsj√∂",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "7.13.8",
    "@types/inquirer": "^7.3.1",
    "@types/ncp": "^2.0.4",
    "@types/node": "^12.20.4",
    "markdown-it-highlightjs": "^3.4.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-markdown-it": "github:erkkah/parcel-plugin-markdown-it#update-highlight",
    "parcel-plugin-static-files-copy": "^2.5.1",
    "postcss-simple-vars": "^5.0.2",
    "posthtml-expressions": "^1.7.1",
    "rimraf": "^2.7.1",
    "typescript": "^4.2.2"
  },
  "staticFiles": {},
  "posthtml": {
    "plugins": {
      "posthtml-expressions": {
        "locals": {
          "theme": "coffee",
          "code": {
            "highlight": true,
            "theme": "rainbow"
          },
          "mdi": true,
          "keywords": "awesome markdown skitliten onepager webapp",
          "logo": null,
          "title": "Sheetleeten",
          "tagline": "This machine <b>kills</b> bitrot",
          "copy": "&copy;2021 Sheetleeten",
          "email": {
            "to": "hello",
            "domain": "example",
            "tld": "com"
          }
        }
      }
    }
  },
  "postcss": {
    "plugins": {
      "postcss-simple-vars": {
        "silent": false,
        "variables": {
          "headline": "Sheetleeten"
        }
      }
    }
  },
  "dependencies": {
    "arg": "^5.0.0",
    "execa": "^5.0.0",
    "inquirer": "^8.0.0",
    "kleur": "^4.1.4",
    "ncp": "^2.0.0",
    "pkg-install": "^1.0.0",
    "twisters": "^1.1.0"
  }
}
